<body class="{{body_class}}">

   <div class="page">

     <header class="main-header">

      <a class="main-header__logo" href="{{@blog.url}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}} logo" />
      </a>

      <nav class="main-header__menu">
        <a href="https://www.patreon.com/davidwolinsky" aria-label="patreon" rel="noopener" target="_blank">patreon</a>
