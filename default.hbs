      ga('create', 'UA-59913194-1', 'auto');
      ga('send', 'pageview');
    </script>
    <script>d = document.documentElement;d.className=d.className.replace('no-js', 'js');</script>
    {{ghost_head}}
</head>
<body class="{{body_class}}">

   <div class="page">

     <header class="main-header">

      <a class="main-header__logo" href="{{@blog.url}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}} logo" />
      </a>

      <button class="main-header__toggle">
        <span class="screen-reader-text">Menu</span>
        <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 49.3 40" enable-background="new 0 0 49.3 40"><path d="M44.3 10h-39.3c-2.7 0-5-2.2-5-5 0-2.7 2.2-5 5-5h39.3c2.7 0 5 2.2 5 5s-2.2 5-5 5zM44.3 25h-39.3c-2.7 0-5-2.2-5-5 0-2.7 2.2-5 5-5h39.3c2.7 0 5 2.2 5 5s-2.2 5-5 5zM44.3 40h-39.3c-2.7 0-5-2.2-5-5s2.2-5 5-5h39.3c2.7 0 5 2.2 5 5s-2.2 5-5 5z"/></svg>
      </button>

      <div class="main-header__overlay"></div>
      <nav class="main-header__menu">
        <a href="/about/">_readme/contact</a>
        <a href="https://medium.com/@davidwolinsky" aria-label="david on medium" rel="noopener" target="_blank">_david on medium</a>
        <a href="https://www.patreon.com/davidwolinsky" aria-label="support on patreon" rel="noopener" target="_blank">_support on patreon</a>
        <a href="http://feeds.feedburner.com/dontdie" aria-label="rss feed" rel="noopener" target="_blank"><i class="fa fa-rss"></i>_feed</a>
        <a href="http://eepurl.com/bdJ6iT" aria-label="newsletter signup" rel="noopener" target="_blank"><i class="fa fa-envelope"></i>_newsletter</a>
        <button id="dark-mode-toggle" onClick="toggleColorMode();">
          <span class="dark"><i class="fa fa-moon-o"></i>_dark mode</a></span>
          <span class="light"><i class="fa fa-sun-o"></i>_light mode</a></span>
        </button>
      </nav>

	   </header>

    {{{body}}}

    {{>footer }}

  </div><!-- /wrap -->

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{>head-scripts}}
    <script src="{{asset "js/zepto.js"}}"></script>
    <script src="{{asset "js/scripts.js"}}"></script>

</body>
</html>
